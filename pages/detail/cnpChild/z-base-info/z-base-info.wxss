.base-info{
  padding: 16rpx;
  margin-top: 10rpx;
  border-bottom: 12rpx solid #f2f2f2;
}
.title{
  font-size: 32rpx;
}
.price{
  margin-top: 8rpx;
}
.newPrice{
  color: #ff5777;
  margin-left: 10rpx;
}
.oldPrice{
  margin-left: 20rpx;
  font-size: 28rpx;
  text-decoration: line-through;
}
.discount{
  background: #ff5777;
  color: #fff;
  margin-left: 16rpx;
  padding: 4rpx 6rpx;
  font-size: 24rpx;
  border-radius: 16rpx;
  position: relative;
  bottom: 13rpx;
}
.columns{
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin-top: 30rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid rgba(200, 200, 200, .6)
}
.services{
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  padding: 30rpx 0;
}
.services .icon{
  width: 24rpx;
  height: 24rpx;
  position: relative;
  top: 4rpx;
  right: 6rpx;
}